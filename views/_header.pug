header.header 
    nav.nav.nav--tours 
        a.nav__el(href='/') All Tours
    .header__logo 
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user 
        if user
            a.nav__el.nav__el--logout Log Out
            a.nav__el(href='/me')
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`${user.name} photo`)
                span= user.name.split(' ')[0]
                //getting the first name of the user
        else
            a.nav__el(href='/login') Login
            a.nav__el.nav__el--cta(href='#') Sign up